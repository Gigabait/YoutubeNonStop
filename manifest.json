{
    "name": "YouTube Non-Stop",
    "version": "0.1",
    "description": "Kiss the annoying \"Continue watching?\" confirmation goodbye!",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
      "scripts": ["autoconfirm.js"],
      "persistent": false
    },
    "page_action": {
     "default_popup": "popup.html",
     "default_icon": {
        "16": "images/yns16.png",
        "32": "images/yns32.png",
        "48": "images/yns48.png",
        "128": "images/yns128.png"
      }
   },
   "icons": {
      "16": "images/yns16.png",
      "32": "images/yns32.png",
      "48": "images/yns48.png",
      "128": "images/yns128.png"
    },
    "manifest_version": 2
  }
